<!doctype html>
<html lang="<%= i18n.language %>" ng-app="adminApp">
<head>
    <title>Admin App</title>
    <meta charset="UTF-8">
    <%- html.css(
            /* LibrerÃ­as */
            '/libs/bootstrap/dist/css/bootstrap.min.css',
            '/libs/fontawesome/css/font-awesome.min.css',
            '/assets/css/admin.css'
    ) %>
    <%- html.js(
            /* Librerias */
            '/libs/angular/angular.min.js',
            '/libs/jquery/dist/jquery.min.js',
            '/libs/bootstrap/dist/js/bootstrap.min.js',
            '/libs/angular-bootstrap/ui-bootstrap.min.js',
            '/libs/angular-bootstrap/ui-bootstrap-tpls.min.js',
            /* Requisitos */
            '/libs/angular-ui-utils/ui-utils.min.js',
            '/libs/angular-touch/angular-touch.min.js',
            '/libs/angular-route/angular-route.min.js',
            '/libs/angular-resource/angular-resource.min.js',
            '/libs/angular-translate/angular-translate.min.js',
            '/libs/angular-translate-loader-url/angular-translate-loader-url.min.js',
            /* Locale */
            '/assets/js/resources/locale-es.js',
            /* App */
            '/assets/js/admin/app.js'
    ) %>
</head>
<body class="app">
<!-- Launch the app -->
<div id="app" ng-init="user=<%= JSON.stringify(user) %>;config=<%= JSON.stringify(config) %>">
    <header ng-include="'/assets/js/admin/views/partials/header.html'"></header>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 aside">
                <div ng-include="'/assets/js/admin/views/partials/aside.html'"></div>
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                <div ng-include="'/assets/js/admin/views/partials/flash-messages.html'"></div>
                <div id="content" ng-view></div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
