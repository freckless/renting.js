<!doctype html>
<html lang="<%- i18n.language %>">
<head>
    <meta charset="UTF-8">
    <title>Admin Login - <%- config.name %></title>

    <!-- Assets -->
    <%- asset.css('admin.css') %>
</head>
<body>
    <section id="login">
        <div id="login-pane">
            <div class="header">
                <%- asset.icon('lock', 'apps/admin/icons.svg') %>
                <%= _('admin.admin_pane') %>
            </div>
            <form action="/admin/login" method="post" class="form-signin">
                <input type="text" name="username" class="form-control input-lg" placeholder="<%= _('admin.username') %>" required autofocus>
                <input type="password" name="password" class="form-control input-lg" placeholder="<%= _('admin.password') %>">
                <button class="btn btn-lg btn-primary btn-block" type="submit"><%= _('admin.sign_in') %></button>
                <label class="checkbox pull-left">
                    <input type="checkbox" value="remember-me">
                    <%= _('admin.remember_me') %>
                </label>
            </form>
        </div>
    </section>
</body>
</html>
